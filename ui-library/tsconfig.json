{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["./**/*.ts", "./**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
