{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "ui-library": ["./index.ts"],
      "ui-library/*": ["./*"]
    },
    "declaration": true,
    "declarationDir": "types",
    "skipLibCheck": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.vue",
    "composables/**/*.ts",
    "theme/**/*.ts",
    "index.ts",
    "types/**/*.d.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.mts"
  ],
  "exclude": ["node_modules", "dist", "demo", "storybook-static"]
}